<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:text="Age"
        app:layout_columnWeight="1" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/signup_textview_input_age"
        android:layout_width="0dp"
        android:inputType="number"
        android:maxLength="3"
        app:layout_columnWeight="1"

        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:text="Fluent Language"
        app:layout_columnWeight="1" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/signup_spinner_input_age_fluent_language"
        android:layout_width="0dp"
        android:entries="@array/options_entries_languades"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        app:layout_columnWeight="1"
        tools:listheader="option" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:text="@string/language_of_interest"
        app:layout_columnWeight="1" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/signup_spinner_input_age_language_of_interest"
        android:layout_width="0dp"
        android:entries="@array/options_entries_languades"
        app:layout_columnWeight="1"
        tools:listheader="option" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:text="@string/signup_description_label"
        app:layout_columnWeight="1" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/signup_user_description"
        android:layout_width="0dp"
        android:maxLength="500"
        app:layout_columnWeight="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signup_upload_picture"
        android:text="@string/button_profile_upload_picture"
        app:layout_columnSpan="2"
        app:layout_gravity="center_horizontal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/signup_imageview_profile_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_placeholder_profile_photo"
        android:text="@string/button_profile_upload_picture"
        app:layout_gravity="center_horizontal"
        app:layout_columnSpan="2"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signup_button"
        android:text="Sign Up"
        app:layout_columnSpan="2"
        app:layout_gravity="center_horizontal" />


</android.support.v7.widget.GridLayout>


